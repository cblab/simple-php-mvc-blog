server {
      listen 80;
      server_name simple-php-mvc-blog.tld;
      access_log  /var/log/nginx/simple-php-mvc-blog.access.log;        
      error_log   /var/log/nginx/simple-php-mvc-blog.error.log;
      
      root /var/www/simple-php-mvc-blog/public/;
      index index.html index.htm index.php;

      location = /favicon.ico {
      access_log     off;
      log_not_found  off;
      } 

      location = /robots.txt {
      access_log     off;
      log_not_found  off;
      }

      location ~* ^.+\.(html|jpg|jpeg|gif|png|ico|css|zip|tgz|gz|rar|bz2|doc|xls|exe|pdf|ppt|txt|tar|mid|midi|wav|bmp|rtf|js)$
      {
                root /var/www/simple-php-mvc-blog/public/;
                expires 30d;
                break;
      }

      location / {
        # This is cool because no php is touched for static content
        try_files $uri $uri/ /index.php;
      }
 
      location ~ \.php$ {
        fastcgi_pass   unix:/tmp/php5-fpm.sock;        
        fastcgi_index  index.php;
        fastcgi_param  SCRIPT_FILENAME     /home/chris/temp/simple-php-mvc-blog/public/;
        include        fastcgi_params;
      }
}

